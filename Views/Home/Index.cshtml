@model btcTestnetCoins.Model.Payout;
@{
	ViewData["Title"] = "Home Page";
}

<div class="container">
	<div class="row">
		<div class="col-8 offset-2">
			<div class="bg-body-secondary text-center py-5 rounded-2">
				<h1 class="display-6.fw-bold">BTCTestnetCoins</h1>
			</div>
			<div class="p-2">
				@using (Html.BeginForm("Index", "Home", FormMethod.Post))
				{
				<form>
					<div class="pb-1">
						<label class="text-center pb-1">Enter BTC Address</label>
						<input class="form-control form-control-lg" {@Html.TextBoxFor(m => m.Address)}/>
					</div>
					<div class="">
						<button class="btn btn-success w-25" type="submit">Get Testnet Coins</button>
					</div>
				</form>
				}
				
			</div>
			<div></div>
		</div>
	</div>
</div>










