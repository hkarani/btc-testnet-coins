@model btcTestnetCoins.Models.PayoutDetails;
@{
	ViewData["Title"] = "Home Page";
}

<div class="container">
	<div class="row">
		<div class="col-8 offset-2">
			<div class="bg-body-secondary text-center py-5 rounded-2">
				<h1 class="display-6.fw-bold">BTCTestnetCoins</h1>
			</div>
			<div class="p-2">
				<form method="post" asp-controller="Home" asp-action="SendBitcoin">
					<div class="pb-1">
						<label asp-for="DestinationAddress" class="text-center pb-1">Enter BTC Address</label>
						<input asp-for="DestinationAddress" class="form-control form-control-lg" />
					</div>
					<div class="">
						<button class="btn btn-success w-25" type="submit">Get Testnet Coins</button>
					</div>
				</form>
			</div>
			<div></div>
		</div>
	</div>
</div>










